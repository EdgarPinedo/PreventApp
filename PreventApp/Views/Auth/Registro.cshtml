@using PreventApp.DTOs;
@{
    ViewData["Title"] = "Registrarse";
}
@model UsuarioDTO

<div class="fondo">
    <div class="login-register" style="height: 550px">
        <div class="imagelogin"></div>
        <div class="form-box">
            <h2 style="text-align:center" class="main-title">Registrarse</h2>
            <form asp-action="Registro" method="post">
                <div class="input-box">
                    <i class="bi bi-envelope"></i>
                    <input asp-for="Email" required placeholder=" " />
                    <label>Correo electrónico</label>
                    <span class="span span-validation" asp-validation-for="Email"></span>
                </div>
                <div class="input-box">
                    <i class="bi bi-lock"></i>
                    <input asp-for="Contraseña" required placeholder=" " />
                    <label>Contraseña</label>
                    <span class="span span-validation" asp-validation-for="Contraseña"></span>
                </div>
                <div class="input-box">
                    <i class="bi bi-lock"></i>
                    <input asp-for="ConfirmarContraseña" required placeholder=" " style="margin-bottom: 8px" />
                    <label>Confirmar contraseña</label>
                    <span class="span span-validation" asp-validation-for="ConfirmarContraseña"></span>
                </div>
                @if (ViewData["ValidarRegistro"] != null)
                {
                    <label class="text-danger" style="margin-bottom: 20px">@ViewData["ValidarRegistro"]</label>
                }
                <button type="submit" class="btn">Registrarse</button>
                <div class="pText">
                    <p>
                        Ya tienes una cuenta?
                        <a asp-action="Login">Iniciar sesión</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.querySelector(".login-button").classList.add("visually-hidden");
</script>