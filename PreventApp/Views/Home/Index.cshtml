@{
    ViewData["Title"] = "Home";
}

<style>
    .leaflet-bar a {
        background-color: rgb(0,0,0,.7);
        color: white;
        border-bottom: 1px solid #000;
    }

    .leaflet-bar a.leaflet-disabled {
        background-color: rgb(0,0,0,.7);
    }

    .leaflet-bar a:hover, .leaflet-bar a:focus {
        background-color: rgb(0,0,0);
    }
</style>

<div id="map">
    <header id="panel">
        <partial name="_Navbar" />
    </header>
    <button id="nuevaAlerta">
        <a class="text-white" asp-area="" asp-controller="Home" asp-action="Privacy">
            <svg xmlns="http://www.w3.org/2000/svg" width="17" height="17" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 15 15">
                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
            </svg>
        </a>
    </button>
    <button id="menuUser" onclick="toLogin()">
        <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="white" class="bi bi-person-circle" viewBox="0 0 16 16">
            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
        </svg>
        <div id="popupOptions">
            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Iniciar sesión</a>
            <hr style="margin-bottom: 0px; margin-top: 0px" />
            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Registrarse</a>
        </div>
    </button>
</div>


<script>
    function toLogin() {
        var popup = document.getElementById("popupOptions");
        popup.classList.toggle("show");
    }
</script>
<script src="~/js/map.js" />