@model List<Accidente>

@{
    ViewData["Title"] = "Inicio";
}

<style>
    .leaflet-bar a {
        background-color: rgb(33, 37, 41, .9);
        color: #16c6ff;
        border-bottom: 1px solid #000;
    }

    .leaflet-bar a.leaflet-disabled {
        background-color: rgb(33, 37, 41, .9);
    }

    .leaflet-bar a:hover, .leaflet-bar a:focus {
        background-color: rgb(0,0,0);
    }

    .leaflet-container .leaflet-control-attribution {
        background: rgba(33, 37, 41);
    }

    .leaflet-control-attribution, .leaflet-control-scale-line {
        color: #D2D2D2;
    }

    .leaflet-container a {
        color: #00dcff;
    }
</style>

<div id="map" style="background-color: #f2efe9"></div>

<header id="panel">
    <partial name="_Navbar" />
</header>

<partial name="_UserMenu" />

<div id="nuevaAlerta" onclick="alertaPopup()">
    <i class="bi bi-pencil-square" style="font-size: 17px; color: #16c6ff;"></i>
</div>

<div id="alert-container" class="alert-container">
    <div class="panel-alert">
        <h3 style="color: #16c6ff;">Enviar alerta</h3>
        <form>
            <label class="coor-label">
                Haz clic sobre el mapa para obtener las coordenadas
            </label>
            <i class="bi bi-globe">&nbsp; Coordenadas</i>
            <div class="coor-box">
                <div class="lat-box">
                    <label>Latitud:</label>
                    <label class="lat-label" id="latitud"></label>
                </div>
                <div class="long-box">
                    <label>Longitud:</label>
                    <label class="long-label" id="longitud"></label>
                </div>
            </div>
            <label style="font-size: 14px">Descripción del accidente o percance:</label>
            <textarea placeholder="Escribe aquí..." id="text-a" class="text-area" required></textarea>
            <div style="display: flex; justify-content: center">
                <button type="submit" class="btn">Enviar</button>
            </div>
        </form>
    </div>
</div>

<script>
    function alertaPopup() {
        var alerta = document.getElementById("alert-container");
        alerta.classList.toggle('active');
        document.getElementById("latitud").innerHTML = "";
        document.getElementById("longitud").innerHTML = "";
        document.getElementById("text-a").value = "";
    }

    var model = @Html.Raw(Json.Serialize(@Model));
    console.log(model);
</script>
<script src="~/js/map.js"></script>